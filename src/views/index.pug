doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(http-equiv="x-ua-compatible" content="ie=edge")
        meta(name="viewport" content="width=device-width")
        title "sekis"
        link(href="styles/main.css" rel="stylesheet" type="text/css")
    body
        .wrapper
            .container
                header.header
                    .logo
                        img(src="img/logo.svg" alt="кеака")
                    ul.menu
                        -var values = ["о нас", "бургеры", "команда", "меню", "отзывы", "контакты"]
                        each val in values
                            li.menu_item #{val}
                    button.btn заказать
                .content
                    .burger
                        .burger-img-wrapper
                            .burger-img
                                img.burger-img_img(src="img/burger.jpg" alt="Картинка бургеров")
                        .burger-desc
                            h2.we-do мы делаем
                            h1 натуральные бургеры
                    .arrow V